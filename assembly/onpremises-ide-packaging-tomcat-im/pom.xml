<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>onpremises-ide-parent</artifactId>
        <groupId>com.codenvy.onpremises</groupId>
        <version>5.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>onpremises-ide-packaging-tomcat-im</artifactId>
    <packaging>pom</packaging>
    <name>Onpremises IDE :: Tomcat :: Installation Manager</name>
    <dependencies>
        <dependency>
            <groupId>com.codenvy.im</groupId>
            <artifactId>installation-manager-server-war</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.eclipse.che.lib</groupId>
            <artifactId>che-swagger-war</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.eclipse.che.lib</groupId>
            <artifactId>che-tomcat8-slf4j-logback</artifactId>
            <type>zip</type>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>deploy</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-dependencies-war</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/packager-conf/war/im-api-docs-ui</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.eclipse.che.lib</groupId>
                                            <artifactId>che-swagger-war</artifactId>
                                            <type>war</type>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-tomcat-dependencies</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/tomcat</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.eclipse.che.lib</groupId>
                                            <artifactId>che-tomcat8-slf4j-logback</artifactId>
                                            <type>zip</type>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <version>1.5.3</version>
                        <executions>
                            <execution>
                                <id>api-docs-ui</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/packager-conf/war/im-api-docs-ui/index.html</file>
                                    <replacements>
                                        <replacement>
                                            <token>api/docs</token>
                                            <value>im/docs</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                            <execution>
                                <id>tomcat-ports</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                                <configuration>
                                    <file>${project.build.directory}/tomcat/conf/server.xml</file>
                                    <replacements>
                                        <replacement>
                                            <token>Server port="8005"</token>
                                            <value>Server port="8006"</value>
                                        </replacement>
                                        <replacement>
                                            <token>Connector port="8080"</token>
                                            <value>Connector port="8082"</value>
                                        </replacement>
                                        <replacement>
                                            <token>rmiRegistryPortPlatform="32001"</token>
                                            <value>rmiRegistryPortPlatform="32002"</value>
                                        </replacement>
                                        <replacement>
                                            <token>rmiServerPortPlatform="32101"</token>
                                            <value>rmiServerPortPlatform="32102"</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <updateOnly>false</updateOnly>
                            <descriptor>${project.basedir}/src/assembly/assembly.xml</descriptor>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
