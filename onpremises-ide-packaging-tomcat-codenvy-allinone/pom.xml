<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>cloud-ide-parent</artifactId>
        <groupId>com.codenvy.cloud-ide</groupId>
        <version>3.6.0-SNAPSHOT</version>
    </parent>
    <artifactId>cloud-ide-packaging-tomcat-codenvy-allinone</artifactId>
    <packaging>pom</packaging>
    <name>Hosted IDE :: Tomcat :: IDE3 :: All-in-One</name>
    <dependencies>
        <!-- Cloud IDE dependency -->
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-tomcat-site</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-war-datasource-plugin</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-war-factory</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-war-next-builder</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-war-next-codeassistant</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-war-next-runner</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.cloud-ide</groupId>
            <artifactId>cloud-ide-packaging-war-platform-api</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.hosted-infrastructure</groupId>
            <artifactId>codenvy-hosted-mail-server</artifactId>
            <version>${codenvy.hosted-infrastructure.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.ide</groupId>
            <artifactId>codenvy-git-server</artifactId>
            <version>${codenvy.plugin.git.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.codenvy.platform-api</groupId>
            <artifactId>codenvy-api-docs-ui</artifactId>
            <version>${codenvy.api-docs-ui.version}</version>
            <type>war</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-admin-configuration</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <unzip dest="${project.build.directory}/tomcat-aio/" src="${project.build.directory}/packager-conf/zip/tomcat.zip" />
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-aio/">
                                    <fileset dir="${basedir}/src/main/resources/tomcat/" />
                                </copy>
                                <copy file="${project.build.directory}/packager-conf/war/cloud-ide-packaging-war-platform-api.war" tofile="${project.build.directory}/tomcat-aio/webapps/api.war" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-hosted-mail-server.war" tofile="${project.build.directory}/tomcat-aio/webapps/mail.war" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-git-server.war" tofile="${project.build.directory}/tomcat-aio/webapps/git.war" />
                                <copy file="${project.build.directory}/packager-conf/war/cloud-ide-packaging-war-factory.war" overwrite="true" tofile="${project.build.directory}/tomcat-aio/webapps/factory.war" />
                                <echo message="Deploying builder application...." />
                                <copy file="${project.build.directory}/packager-conf/war/cloud-ide-packaging-war-next-builder.war" tofile="${project.build.directory}/tomcat-aio/webapps/builder3.war" />
                                <copy file="${project.build.directory}/packager-conf/war/cloud-ide-packaging-war-next-runner.war" tofile="${project.build.directory}/tomcat-aio/webapps/runner3.war" />
                                <copy file="${project.build.directory}/packager-conf/war/cloud-ide-packaging-war-datasource-plugin.war" tofile="${project.build.directory}/tomcat-aio/webapps/datasource.war" />
                                <copy file="${project.build.directory}/packager-conf/war/cloud-ide-packaging-war-next-codeassistant.war" tofile="${project.build.directory}/tomcat-aio/webapps/java-ca.war" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-api-docs-ui.war" tofile="${project.build.directory}/tomcat-aio/webapps/api-docs-ui.war" />
                                <chmod dir="${project.build.directory}/tomcat-aio/bin" includes="**/*.sh" perm="+x" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <!-- Create the distribution zip and attach it to maven -->
                    <execution>
                        <id>tomcat-zip</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <updateOnly>false</updateOnly>
                            <descriptors>
                                <descriptor>${project.basedir}/src/main/assembly/tomcat-archive.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies-war</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>war</includeTypes>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>${project.build.directory}/packager-conf/war</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.codenvy.cloud-ide</groupId>
                                    <artifactId>cloud-ide-packaging-tomcat-site</artifactId>
                                    <version>${project.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip</outputDirectory>
                                    <destFileName>tomcat.zip</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.exoplatform.ide</groupId>
                                    <artifactId>ide-codeassistant-lucene-index</artifactId>
                                    <version>20120627</version>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip</outputDirectory>
                                    <destFileName>ide-codeassistant-lucene-index.zip</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/wars</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-datasource-ssl-factory</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>codenvy-ssl-socket-factory</artifactId>
                                    <version>${codenvy.plugin.datasource.version}</version>
                                    <outputDirectory>${project.build.directory}/tomcat-aio/lib</outputDirectory>
                                    <destFileName>codenvy-ssl-socket-factory.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
